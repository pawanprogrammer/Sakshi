<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FeedbackActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/feedback"
        android:id="@+id/iv_feedback"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Got Something to say ?"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="5dp"
        android:id="@+id/tv_msg"
        app:layout_constraintTop_toBottomOf="@+id/iv_feedback"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Let Us know how was your experience of using this App, By Simply writing to Us."
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:lineSpacingExtra="2dp"
        android:padding="5dp"
        android:id="@+id/tv_msg1"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_email"
        android:text="Send Your Feedback"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFF"
        android:background="#00BCD4"
        ></Button>
</android.support.constraint.ConstraintLayout>